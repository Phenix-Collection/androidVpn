<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_provider_height"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/provider_icon"
        android:layout_width="wrap_content"
        android:adjustViewBounds="true"
        android:layout_height="@dimen/list_item_provider_icon_size"
        android:layout_marginLeft="8dp"
        android:src="@drawable/vpn_icon"
        android:layout_centerVertical="true"
        android:alpha="0.5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/provider_icon"
        android:ellipsize="middle"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:text="Hogeschool van Amsterdam publieke beta / pilot"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/mainColor"
        />
</RelativeLayout>